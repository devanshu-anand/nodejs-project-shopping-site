extends layouts/main-content.pug
    
block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
    
block content
    main
        h1 My Products
        if prods.length > 0
            .grid
                each products in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{products.title}
                        .card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT2SKsXQiyYKMQBkwfh_gjgDdXHce-jeVReCV_0U7xYEvpe1IPM&s", alt="image")
                        .card__content
                            h2.product__price $20.00
                            p.product__description A very interesting book about so many events
                        .card__actions
                            button.btn add to cart
        else
            h1 No Products